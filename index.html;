    <script>
      document.addEventListener("scroll", function () {
        const scrollY = window.scrollY;
        document.querySelector(".background").style.transform = `scale(${
          1.2 + scrollY * 0.0005
        })`; // Adjusted scale factor for smoother zoom

        const gridSection = document.getElementById("grid-section");
        if (scrollY > window.innerHeight) {
          gridSection.classList.add("show");
          const gridItems = document.querySelectorAll(".grid-item");
          gridItems.forEach((item, index) => {
            item.style.animationDelay = `${index * 0.3}s`;
          });
        }
      });

      window.addEventListener("load", () => {
        const sections = document.querySelectorAll(".section");
        sections.forEach((section, index) => {
          section.style.animationDelay = `${index * 0.5}s`;
        });
      });

      window.addEventListener("DOMContentLoaded", (event) => {
        const headerText = document.getElementById("header-text");
        headerText.style.animation = "none";
        headerText.offsetHeight; /* trigger reflow */
        headerText.style.animation = null;
      });

      window.addEventListener("DOMContentLoaded", (event) => {
        const animatedElements = document.querySelectorAll(".animate");
        animatedElements.forEach((element) => {
          element.style.animation = "none";
          element.offsetHeight; /* trigger reflow */
          element.style.animation = null;
        });
      });
    </script>
